<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#777373">

    <TextView
        android:id="@+id/board_tv"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:background="#3E3C3C"
        android:gravity="end|bottom"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:text="가나다라"
        android:textColor="#ffffff"
        android:textSize="50sp" />

    <RelativeLayout
        android:id="@+id/key_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/board_tv"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/clear"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:backgroundTint="#D3A008"

                android:text="C"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/margin"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_toRightOf="@id/clear"

                android:layout_weight="1"
                android:backgroundTint="#D3A008"
                android:text="+/-"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/rest"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_toRightOf="@id/margin"

                android:layout_weight="1"
                android:backgroundTint="#D3A008"
                android:text="%"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/share"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_toRightOf="@id/rest"
                android:layout_weight="1"
                android:backgroundTint="#D3A008"
                android:text="/"
                android:textColor="#ffffff"
                android:textSize="30sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/row1">

            <Button
                android:id="@+id/btn7"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:backgroundTint="#9F9F9F"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_toRightOf="@id/btn7"
                android:backgroundTint="#9F9F9F"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"

                android:layout_toRightOf="@id/btn8"

                android:backgroundTint="#9F9F9F"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/mul"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:layout_toRightOf="@id/btn9"
                android:backgroundTint="#D3A008"

                android:text="X"
                android:textColor="#ffffff"
                android:textSize="30sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/row2">

            <Button
                android:id="@+id/btn4"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:backgroundTint="#9F9F9F"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_toRightOf="@id/btn4"
                android:backgroundTint="#9F9F9F"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_toRightOf="@id/btn5"
                android:backgroundTint="#9F9F9F"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/sub"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:layout_toRightOf="@id/btn6"
                android:backgroundTint="#D3A008"
                android:text="ㅡ"
                android:textColor="#ffffff"
                android:textSize="30sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/row3">

            <Button
                android:id="@+id/btn1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"

                android:backgroundTint="#9F9F9F"

                android:text="1"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_toRightOf="@id/btn1"
                android:backgroundTint="#9F9F9F"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_toRightOf="@id/btn2"
                android:backgroundTint="#9F9F9F"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/plus"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:layout_toRightOf="@id/btn3"
                android:backgroundTint="#D3A008"
                android:text="+"
                android:textColor="#ffffff"
                android:textSize="30sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/row4">

            <Button
                android:id="@+id/btn0"
                android:layout_width="203dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:backgroundTint="#9F9F9F"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/dot"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_toRightOf="@id/btn0"
                android:backgroundTint="#9F9F9F"
                android:text="."
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/textView2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:layout_toRightOf="@id/dot"
                android:backgroundTint="#D3A008"
                android:text="="
                android:textColor="#ffffff"
                android:textSize="30sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>